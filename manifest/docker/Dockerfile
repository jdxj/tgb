FROM alpine:3

RUN apk add --no-cache tzdata

###############################################################################
#                                INSTALLATION
###############################################################################

ENV WORKDIR=/app
ADD ./temp/linux_amd64/tgb $WORKDIR/tgb
RUN chmod +x $WORKDIR/tgb

###############################################################################
#                                   START
###############################################################################
WORKDIR $WORKDIR
CMD ["./tgb"]
